{
    "build": {
        "beforeBuildCommand": "npm run build",
        "beforeDevCommand": "npm run start",
        "frontendDist": "../dist/solex-invoicing-app/browser",
        "devUrl": "http://localhost:4200"
    },
    "bundle": {
        "active": true,
        "category": "Business",
        "copyright": "Mohlah Software Solutions @2024, All rights reserved",
        "targets": "all",
        "externalBin": [],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": ""
        },
        "longDescription": "A desktop client in charge of SOLEX invoicing service",
        "macOS": {
            "entitlements": null,
            "exceptionDomain": "",
            "frameworks": [],
            "providerShortName": null,
            "signingIdentity": null
        },
        "resources": [],
        "shortDescription": "A desktop client in charge of SOLEX invoicing service",
        "linux": {
            "deb": {
                "depends": []
            }
        }
    },
    "productName": "SOLEX Facturation",
    "mainBinaryName": "SOLEX Facturation",
    "version": "0.1.0",
    "identifier": "cm.solex.invoicing",
    "plugins": {
        "sql": {
            "preload": [
                "sqlite:solex-invoicing.db"
            ]
        }
    },
    "app": {
        "windows": [
            {
                "fullscreen": false,
                "height": 600,
                "resizable": true,
                "title": "SOLEX Facturation",
                "width": 900,
                "center": false,
                "decorations": true,
                "focus": true,
                "contentProtected": false,
                "maximized": true,
                "visible": false,
                "useHttpsScheme": true
            },
            {
                "title": "SOLEX Facturation",
                "width": 800,
                "height": 600,
                "decorations": false,
                "center": true,
                "focus": true,
                "alwaysOnTop": true,
                "transparent": false,
                "url": "assets/html/splashscreen.html",
                "label": "splashscreen",
                "useHttpsScheme": true,
                "visible": true
            }
        ],
        "security": {
            "csp": null
        }
    }
}
