{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "npm run build",
        "beforeDevCommand": "npm run start",
        "devPath": "http://localhost:4200",
        "distDir": "../dist/solex-invoicing-app/browser"
    },
    "package": {
        "productName": "SOLEX Invoicing App",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "window": {
                "all": false,
                "close": true,
                "hide": true,
                "show": true,
                "maximize": true,
                "minimize": true,
                "unmaximize": true,
                "unminimize": true,
                "startDragging": true
            },
            "os": {
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "category": "Business",
            "copyright": "Mohlah Software Solutions @2024, All rights reserved",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "cm.solex.invoicing",
            "longDescription": "A desktop client in charge of SOLEX invoicing service",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "A desktop client in charge of SOLEX invoicing service",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 600,
                "resizable": true,
                "title": "SOLEX Invoicing App",
                "width": 900,
                "center": false,
                "decorations": false,
                "focus": true,
                "contentProtected": false,
                "maximized": true,
                "visible": false
            },
            {
                "title": "SOLEX Invoicing App",
                "width": 800,
                "height": 600,
                "decorations": false,
                "center": true,
                "focus": true,
                "alwaysOnTop": true,
                "transparent": false,
                "url": "assets/html/splashscreen.html",
                "label": "splashscreen"
            }
        ]
    }
}
